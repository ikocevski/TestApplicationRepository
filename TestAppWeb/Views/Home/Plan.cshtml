@{
    ViewData["Title"] = "Home Page";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<body>
    <div class="sidebar-heading border-bottom bg-light mb-2">
        <span>Setup</span>
        <span>User 1 | Organisation Name</span>

    </div>
    <div class="d-flex" id="wrapper">
        <div class="border-end bg-white id="sidebar-wrapper">

            <div class="list-group list-group-flush selektiraj">
                <a class="list-group-item list-group-item-action list-group-item-light p-3 clicked" asp-controller="Home" asp-action="Index">Hierarchy and Terminologies</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3 clicked">Level 1</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3 clicked" asp-controller="Home" asp-action="Plan">Action Plan</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3 clicked">Approval Process</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3 clicked">Notifications/Escalations</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3 clicked">Position</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3 clicked">Departments</a>
            </div>
        </div>
        <div id="page-content-wrapper">

            <div class="container-fluid">
               <p style="font-weight:bold">Progress Bar & Traffic Lights</p>

               <div>
                   <span class="colorRed"></span> 
                    <input value="1" min="1" max="100" id="rangeRed" type="range" style="width: 70%" /> 
               </div>

                <div>
                    <span class="colorAmber"></span>
                    <input value="1" min="1" max="100" id="rangeAmber" type="range" style="width: 70%" />
                </div>

               <div>
                    <span class="colorGreen"></span>
                    <input value="1" min="1" max="100" id="rangeGreen" type="range" style="width: 70%"/>
               </div>
            </div>
        </div>

        

    </div>

</body>

